<% if current_user.present? and current_user.admin? %>

<p id="notice"><%= notice %></p>

<h1><%= t(:reservations) %></h1>

<table class="highlight">
  <thead>
    <tr>
      <th><%= t(:booking_post) %></th>
      <th><%= t(:start) %></th>
      <th><%= t(:end) %></th>
      <th><%= t(:email) %></th>
      <th><%= t(:phone_number) %></th>
      <th><%= t(:name) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.booking_post.title %></td>
        <td><%= reservation.start.strftime('%d.%m.%Y')%></td>
        <td><%= reservation.end.strftime('%d.%m.%Y')%></td>
        <td><%= reservation.email %></td>
        <td><%= reservation.phone_number %></td>
        <td><%= reservation.name %></td>
        <td><%= link_to t(:show), reservation_path(reservation) %></td>
        <td><%= link_to t(:edit), edit_reservation_path(reservation) %></td>
        <td><%= link_to t(:destroy), reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% end %>
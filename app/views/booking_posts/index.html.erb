<style type="text/css">
  .pagination li.active {
    background: grey;
}
  .pagination li a:hover {
    background: #eeeeee;
  }

  .slider .indicators .indicator-item.active {
    background-color: grey;
  }

</style>
<p id="notice"><%= notice %></p>



<% if current_user.present? and current_user.admin? %>
<div class="container center">
  <%= link_to t(".add"), new_booking_post_path, class: "waves-effect waves-light btn midle" %>
</div>
<% end %>
</br>
<div class="container">    
    <% @booking_posts.each do |booking_post| %>
    <% if current_page?(locale: :ua) %>
      <div class="row">
        <div class="col s12 m8 offset-m2 ">
          <div class="card hoverable">
            <div class="card-image">
              <div class="slider">
                <ul class="slides">
                <% booking_post.booking_pictures.each do |pic| %>
                <%if pic.photo.present?%>
                  <li>
                    <%= image_tag pic.photo.url(:large)%>
                    <% if current_user.present? and current_user.admin? %>
                      <div class="caption center-align", style="color: black;">
                        <h5><%= link_to t(:destroy), [pic.booking_post, pic], class: "waves-effect waves-light btn red", method: :delete, data: { confirm: 'Are you sure?' } %></h5>
                      </div>
                    <% end %>
                  </li>
                <%end%>
                <% end %>
                </ul>
              </div>
            </div>
            <div class="card-content">
            <span class="card-title truncate"><td><%= booking_post.title %></td></span>
              <p><%= truncate(simple_format(booking_post.description), escape: false, length: 300)%></p>
            </div>
            <div class="card-action">
              <%= link_to t(:details), booking_post_path(booking_post) %>
              <% if current_user.present? and current_user.admin? %>
              <%= link_to t(:edit), edit_booking_post_path(booking_post) %>
              <%= link_to t(:destroy), booking_post, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% elsif current_page?(locale: :ru) %>
      <div class="row">
        <div class="col s12 m8 offset-m2 ">
          <div class="card hoverable">
            <div class="card-image">
              <div class="slider">
                <ul class="slides">
                <% booking_post.booking_pictures.each do |pic| %>
                <%if pic.photo.present?%>
                  <li>
                    <%= image_tag pic.photo.url(:large)%>
                    <% if current_user.present? and current_user.admin? %>
                      <div class="caption center-align", style="color: black;">
                        <h5><%= link_to t(:destroy), [pic.booking_post, pic], class: "waves-effect waves-light btn red", method: :delete, data: { confirm: 'Are you sure?' } %></h5>
                      </div>
                    <% end %>
                  </li>
                <%end%>
                <% end %>
                </ul>
              </div>
            </div>
            <div class="card-content">
            <span class="card-title truncate"><td><%= booking_post.title2 %></td></span>
              <p><%= truncate(simple_format(booking_post.description2), escape: false, length: 300)%></p>
            </div>
            <div class="card-action">
              <%= link_to t(:details), booking_post_path(booking_post) %>
              <% if current_user.present? and current_user.admin? %>
              <%= link_to t(:edit), edit_booking_post_path(booking_post) %>
              <%= link_to t(:destroy), booking_post, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>    
    <% end %>
    <% end %>
</div>
<br>
<div class="center">
<%= will_paginate @booking_posts %>
</div>
<br>
<% if current_user.present? and current_user.admin? %>
<div class="container center">
<%= link_to t(".add"), new_booking_post_path, class: "waves-effect waves-light btn midle" %>
</div>
<% end %>


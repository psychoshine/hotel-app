<% if current_user.present? and current_user.admin? %>
  <p id="notice"><%= notice %></p>
<% if current_page?(locale: :ua) %>
  <div class="row">
      <div class="col s12 m6 offset-m3 ">
        <div class="card hoverable">
          <div class="card-image">
            <%= image_tag @post_slide.photo.url(:large) %>
              <%if @post_slide.black == true%>
                <span class="card-title truncate", style="color: black;"><td><%= @post_slide.title %></td></span>
              <%else%>
                <span class="card-title truncate"><td><%= @post_slide.title %></td></span>
              <%end%>      
          </div>
          <div class="card-content">
            <p><%= simple_format(@post_slide.description)%></p>
          </div>
        </div>
      </div>
    </div>
<% end %>
<% if current_page?(locale: :ru) %>
  <div class="row">
      <div class="col s12 m6 offset-m3 ">
        <div class="card hoverable">
          <div class="card-image">
            <%= image_tag @post_slide.photo.url(:large) %>
              <%if @post_slide.black == true%>
                <span class="card-title truncate", style="color: black;"><td><%= @post_slide.title2 %></td></span>
              <%else%>
                <span class="card-title truncate"><td><%= @post_slide.title2 %></td></span>
              <%end%>      
          </div>
          <div class="card-content">
            <p><%= simple_format(@post_slide.description2)%></p>
          </div>
        </div>
      </div>
    </div>
<% end %>
  <div class="container center">
  	<%= link_to t(:edit), edit_post_slide_path(@post_slide), class: "waves-effect waves-light btn" %> 
  	<%= link_to t(:back), post_slides_path, class: "waves-effect waves-light btn"  %>
  	<%= link_to t(:destroy), @post_slide, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn red" %>
  </div>
<% end %>
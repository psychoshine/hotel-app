<div class="container">
<% if current_user.present? and current_user.admin? %>
<%= form_for(entertainment, html: {multipart: true}, class: "col s12") do |f| %>
  <% if entertainment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entertainment.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% entertainment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="input-field col s6">
    <%= f.label :title %>
    <%= f.text_field :title, class: "validate" %>
  </div>
  <div class="input-field col s6">
    <%= f.label :title2 %>
    <%= f.text_field :title2, class: "validate" %>
  </div>
  <div>
    <%= f.check_box :black, id: "test5" %>
    <%= f.label (:black), for: "test5"  %>
  </div>
  <div class="input-field col s6">
    <%= f.label :description %>
    <%= f.text_area :description, id: "textarea1", class: "materialize-textarea" %>
  </div>
  <div class="input-field col s6">
    <%= f.label :description2 %>
    <%= f.text_area :description2, id: "textarea1", class: "materialize-textarea" %>
  </div>
  <div class="file-field input-field">
      <div class="btn">
        <span><%= t(:photo)%></span>
        <%= f.file_field :photo %>
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>

  <div class="waves-effect waves-light btn">
    <%= f.submit "OK"%>
  </div>  
  
<% end %>
<% end %>

</div>
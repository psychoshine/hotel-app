<% if current_page?(locale: :ua) %>
<div class="container">    
    <% @posts.each do |post| %>
      <div class="row">
        <div class="col s12 m8 offset-m2">
          <div class="card hoverable">
            <div class="card-image">
              <%= image_tag post.photo.url(:large) %>
              <%if post.black == true%>
              <span class="card-title truncate", style="color: black;"><td><%= post.title %></td></span>
              <%else%>
              <span class="card-title truncate"><td><%= post.title %></td></span>
              <%end%>            
            </div>
            <div class="card-content">

              <p><%= truncate(simple_format(post.description), escape: false, length: 300) %></p>
            </div>
            <div class="card-action">
              <%= link_to t(:details), post_path(post) %>
              <%= link_to t(:edit), edit_post_path(post) if current_user.present? and current_user.admin? %>
              <%= link_to t(:destroy), post, method: :delete, data: { confirm: 'Are you sure?' } if current_user.present? and current_user.admin? %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>
<% end %>


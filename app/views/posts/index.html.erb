<style type="text/css">
  .pagination li.active {
    background: grey;
}
  .pagination li a:hover {
    background: #eeeeee;
  }


  .slider .indicators .indicator-item.active {
    background-color: grey;
  }

</style>
<p id="notice"><%= notice %></p>
<% if current_page?(locale: :ua) %>
<div>
  <div class="slider">
    <ul class="slides">
    <% @post_slides.each do |post_slide| %>
      <% if post_slide.photo.present?%>
      <li>
        <%= image_tag post_slide.photo.url(:large)%>
        <%if post_slide.position.present? %>
            <%if post_slide.position.align == "left" %>
              
            <%if post_slide.black == true%>
              <div class="caption left-align", style="color: black;">
                <h3><%= post_slide.title %></h3>
                <h5><%= post_slide.description%></h5>
              </div>
            <%else%>
              <div class="caption left-align">
                <h3><%= post_slide.title %></h3>
                <h5 class="light grey-text text-lighten-3"><%= post_slide.description%></h5>
              </div>
            <%end%>

            <%elsif post_slide.position.align == "center" %>
              
            <%if post_slide.black == true%>
              <div class="caption center-align", style="color: black;">
                <h3><%= post_slide.title %></h3>
                <h5><%= post_slide.description%></h5>
              </div>
            <%else%>
              <div class="caption center-align">
                <h3><%= post_slide.title %></h3>
                <h5 class="light grey-text text-lighten-3"><%= post_slide.description%></h5>
              </div>
            <%end%>

            <%elsif post_slide.position.align == "right"%>
              
            <%if post_slide.black == true%>
              <div class="caption right-align", style="color: black;">
                <h3><%= post_slide.title %></h3>
                <h5><%= post_slide.description%></h5>
              </div>
            <%else%>
              <div class="caption right-align">
                <h3><%= post_slide.title %></h3>
                <h5 class="light grey-text text-lighten-3"><%= post_slide.description%></h5>
              </div>
            <%end%>
          <%end%>
        <%end%>
          
      
      <%end%>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>


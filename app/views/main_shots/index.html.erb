<!------PARALLAX------>
<% if current_page?(locale: :ua) %>
<% @main_shots.each do |ms| %>
<%if ms.photo.present?%>
  <div class="parallax-container">
    <div class="parallax">
    <%= image_tag ms.photo.url(:main) %>        
    </div>
  </div>
  <div class="section white">
    <div class="row container">
      <h2 class="header"><%= ms.title %></h2>
      <p class="grey-text text-darken-3 lighten-3"><%= simple_format(ms.description)%></p>
      <% if current_user.present? and current_user.admin? %>
      <h5>
        <%= link_to t(:details), main_shot_path(ms), class: "waves-effect waves-light btn" %>
        <%= link_to t(:edit), edit_main_shot_path(ms), class: "waves-effect waves-light btn" %>
        <%= link_to t(:destroy), ms, class: "waves-effect waves-light btn red", method: :delete, data: { confirm: 'Are you sure?' }  %>
      </h5>
      <% end %>
    </div>
  </div>
<% end %>
<%end%>
<%end%>


